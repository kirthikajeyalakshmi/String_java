// User function Template for Java

class Solution {
    static String snakeCase(String S, int n) {
        // code here
        StringBuilder sb = new StringBuilder();

        for(int i=0;i<n;i++){
            char ch=S.charAt(i);
            if(ch==' '){
                sb.append("_");
            }else{
                sb.append(Character.toLowerCase(ch));
            }
        }
        return sb.toString();
    }
};
